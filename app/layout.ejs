    <div class="modal fade mt-18" id="loginPop" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
        
                <div class="px-7 py-11 px-lg-10 py-lg-12 bg-primary">
                <h3 class="fs-4 text-center text-white mb-7 mb-lg-9">登入</h3>
                <form>
                  <div class="mb-4 mb-lg-7">
                    <label for="exampleInputEmail1" class="form-label text-title">信箱</label>
                    <input type="email" class="form-control bg-dark border" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="請輸入信箱">
                  </div>
                  <div class="mb-4 mb-lg-7">
                    <label for="exampleInputEmail1" class="form-label text-title">密碼</label>
                    <input type="email" class="form-control bg-dark border" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="請輸入密碼">
                  </div>
                  <button type="submit" class="btn btn-primary login-btn d-block w-100 gradient-bg px-3 py-2 rounded-8 mb-7 mb-lg-12">登入</button>
                </form>
        
                <p class="text-center text-white login-other-title mb-4">其他登入方式</p>
        
                <a href="#" class="login-other-btn d-flex align-items-center justify-content-center w-100 py-2 border rounded-8 mb-4">
                  <img src="./assets/images/icon_fb.svg" alt="fb" style="width: 24px;" class="d-block me-9">
                  <p class="m-0 text-center text-white">Facebook 登入</p>
                </a>
        
                <a href="#" class="login-other-btn d-flex align-items-center justify-content-center w-100 py-2 border rounded-8">
